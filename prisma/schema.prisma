generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id        Int       @id @default(autoincrement())
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  stock      Int      @default(0)
  supplierId Int
  supplier   Supplier @relation(fields: [supplierId], references: [id])
}
